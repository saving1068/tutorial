@import "../../wxParse/wxParse.wxss";
.popup-box {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 200;
}
.popup {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: transparent;
  text-align: center;
}
.popup-item {
  background: #fff;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
}
.popup-item:last-child {
  margin-top: 12rpx;
}
.phone-number {
  height: 128rpx;
  line-height: 128rpx;
  font-size: 26rpx;
  color: #999;
  border-bottom: 1rpx solid #ccc;
}
.content{
  min-height: 100vh;
  background: transparent;
}
.top{
  width: 100%;
  height: 420rpx;
  background:rgba(204,204,204,1);
}
.top>image {
  width: 100%;
  height: 100%;
}
.phoneBox{

  margin-top: 40rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.phoneBox .title{
  font-size: 40rpx;
  font-weight: 500;

}

.addressBox{
display: flex;
align-items: center;
justify-content: space-between;
/* margin-top: 10rpx; */
}

.addressBox .addressIcon{
  /* width: 20rpx; */
  /* height: 24rpx; */
}

.addressBox .addressIcon image{
  margin: 10rpx;
  width: 20rpx;
  height: 24rpx;
  float: left;
}
.left{
  width: 620rpx;
  border-right:1rpx solid #CCCCCC;
  box-sizing: border-box; 
  display: flex;
  align-items: center;
}
.left .text{
  color: #666666;
  font-size: 26rpx;
  margin-left: 10rpx;
  max-width: 590rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
 -webkit-box-orient: vertical;
 -webkit-line-clamp:2;
}

.phoneIcon{
  /* width:30rpx;
  height: 30rpx; */

}
.phoneIcon image{
  margin: 20rpx;
  width: 30rpx;
  height: 30rpx;
  float: left;
}

.textContent{
  font-size: 26rpx;
  margin-top: 77rpx;
  font-weight:400;
  line-height:40rpx;
}

.imgBox{
  width: 100%;
  height: 460rpx;
  margin-top: 30rpx;
}

.imgBox image{
  width: 100%;
  height: 100%;
  float: left;
}

.item{
  padding-top: 80rpx;
  padding-bottom: 50rpx;
}

.item .title{
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;

}

.item .title .mid{
  
  padding: 0 15rpx;
  position: relative;
}

.item .title .mid .line{
  height: 10rpx;
  width: 100%;
  position: absolute;
  border-radius:5rpx;
  bottom: 4rpx;
  left: 0;
  background: #FFB911;
}

.item .title .mid text{
  font-weight:500;
  position: relative;
  z-index: 99;
}

.item .text{
  margin-top: 35rpx;
  padding:  0 30rpx;
  font-size: 26rpx;
  font-weight:400;
  line-height:40rpx;
}