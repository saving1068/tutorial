.nav {
    position: fixed;
    left:0;
    top:0;
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    background: #fff;
    box-sizing: border-box;
    padding: 20rpx 30rpx;
    z-index: 999;
}
::-webkit-scrollbar  
{  
    width: 0;  
    height: 0; 
    color: transparent;  
}
.scroll-view-item {
    position: relative;
    display: inline-block;
    margin-right: 56rpx;
    font-size:30rpx;
    font-weight:400;
    color: #999;
    padding: 10rpx 0 19rpx 0;
    line-height:34rpx;
}
.scroll-view-item:last-child {
    margin: 0;
}
.scroll-view-item:after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 25%;
    width: 30rpx;
    height: 6rpx;
    border-radius: 3rpx;
    background: transparent;
}
.active {
    color: #FFB911;
    font-weight:bold;
}
.active:after {
    background: #FFB911;
}
